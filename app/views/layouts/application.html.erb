<!DOCTYPE html>
<html>
<head>
	<title>RateMyClasses</title>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>

	<!-- Bootstrap partial -->
 	<%#= render 'layouts/bootstrapstuff' %>

	<!-- Custom Stylesheets -->
	<!-- these should be taken care of by the scss files in assets -->
	<%#= stylesheet_link_tag '/css/top.css', :media => 'all' %>
	<%#= stylesheet_link_tag '/css/bottom.css', :media => 'all' %>
	<%#= stylesheet_link_tag '/css/about.css', :media => 'all' %>
	<link href='https://fonts.googleapis.com/css?family=Archivo+Narrow' rel='stylesheet' type='text/css'>

	<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2-rc.1/css/select2.min.css" rel="stylesheet" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2-rc.1/js/select2.min.js"></script>
</head>

<body>
	<!-- Render the body and navbar if not on home page -->
	<% if current_page?('/pages/home') || current_page?('/') %>
	    <div style="margin: 0px 0px 0px 0px;">
			<%= yield %>
		</div>
	<% else %>
		<%= render 'layouts/top' %>
		<!-- Alert Messages -->
		<% flash.each do |name, msg| %>
			<% if msg.is_a?(String) %>
				<div class="alert alert-<%= name == "notice" ? "success" : "danger" %> alert-dismissable">
					<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
					<%= content_tag :div, msg, :id => "flash_#{name}" %>
				</div>
			<% end %>
		<% end %>


		<div class="background-image"></div>
		<div id="content">
			<div class="container" id="content_container">
				<%= yield %>
		  </div>
		</div>

		<%= render 'layouts/bottom' %>

	<% end %>

	<!-- Footer -->
	<%#= render 'layouts/footer' %>
</body>
</html>
